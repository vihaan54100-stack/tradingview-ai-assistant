{
  "manifest_version": 3,
  "name": "TradingView AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered trading assistant that analyzes TradingView charts and provides buy/sell recommendations",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tradingview.com/*",
        "https://tradingview.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
